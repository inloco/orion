/*******************************
         Site Overrides
*******************************/
* {
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
}

button,
input,
optgroup,
select,
textarea {
  font-family: Roboto, 'Helvetica Neue', Arial, Helvetica, sans-serif; /* 1 */
  font-size: 100%; /* 1 */
  line-height: 1.15; /* 1 */
  margin: 0; /* 2 */
}
